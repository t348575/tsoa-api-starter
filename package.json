{
  "name": "tsoa-api-starter",
  "description": "A mongoose tsoa starter template with oauth2, jwt.",
  "version": "1.0.0",
  "main": "dist/server.js",
  "scripts": {
    "start": "yarn start:dev",
    "start:dev": "concurrently \"yarn build:tsoa && ts-node-dev --respawn ./src/server.ts --rs --watch 'src' --debug\" \"nodemon\"",
    "start:prod": "yarn env:prod node ./build/src/server.js",
    "build:routes": "tsoa routes",
    "build:swagger": "tsoa swagger",
    "build:tsoa": "yarn clean && yarn build:routes && yarn build:swagger && yarn copy",
    "build:prod": "yarn build:tsoa && tsc",
    "build": "yarn build:prod",
    "clean": "rmdir /Q/S build && mkdir build && mkdir build\\resources",
    "copy": "cp -R ./resources ./build"
  },
  "author": "Joseph Subash Kanichai <kjosephsubash@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "argon2": "^0.27.1",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "inversify": "^5.0.5",
    "inversify-binding-decorators": "^4.0.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.11.16",
    "mongoose-unique-validator": "^2.0.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "querystring": "^0.2.1",
    "redis": "^3.0.2",
    "reflect-metadata": "^0.1.13",
    "swagger-ui-dist": "^3.43.0",
    "swagger-ui-express": "^4.1.6",
    "ts-node-dev": "^1.1.1",
    "tsoa": "^3.5.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/argon2": "^0.15.0",
    "@types/body-parser": "^1.19.0",
    "@types/express": "^4.17.11",
    "@types/inversify": "^2.0.33",
    "@types/inversify-binding-decorators": "^2.0.0",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongoose": "^5.10.3",
    "@types/mongoose-unique-validator": "^1.0.4",
    "@types/morgan": "^1.9.2",
    "@types/multer": "^1.4.5",
    "@types/node": "^14.14.27",
    "@types/redis": "^2.8.28",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/winston": "^2.4.4",
    "typescript": "^4.1.5"
  }
}
